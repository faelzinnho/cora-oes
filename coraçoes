  <style>
    body {
      margin: 0;
      overflow: hidden;
      background: black;
      color: white;
      font-family: 'Arial', sans-serif;
    }

    canvas {
      position: absolute;
      top: 0;
      left: 0;
    }

    #botao {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #ff0066;
      color: white;
      border: none;
      font-size: 30px;
      padding: 15px 30px;
      border-radius: 10px;
      cursor: pointer;
      z-index: 2;
    }

    #cora√ßao {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 100px;
      color: red;
      display: none;
      z-index: 2;
      cursor: pointer;
    }

    #data {
      position: absolute;
      bottom: 50px;
